<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field border-4 border-black m-4 w-full">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full", placeholder:'Name' %>
  </div>

  <div class="field border-4 border-black m-4 w-full">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full", placeholder:'Email'%>
  </div>

  <div class="field border-4 border-black m-4 w-full">
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full", placeholder: "Minimum six characters password" %>
  </div>


  <div class="field border-4 border-black m-4 w-full">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full", placeholder: "Confirm Password" %>
  </div>

  <div class="actions m-4 border-4 border-indigo-600 mx-4 my-8 w-full text-center hover:bg-indigo-600">
    <%= f.submit "Sign up", class:"font-bold p-3 text-sm text-slate-600 hover:text-white  w-full" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
