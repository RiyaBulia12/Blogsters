<h2 class="text-center text-4xl ">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field border-4 border-black m-4 w-full">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full", placeholder:'Email' %>
  </div>

 <div class="actions m-4 border-4 border-indigo-600 mx-4 my-8 w-full text-center hover:bg-indigo-600">
    <%= f.submit "Send me reset password instructions", class:"font-bold p-3 text-sm text-slate-600 hover:text-white w-full"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
